<h1>Add movie to list</h1>
<%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <%= f.submit "Add movie", class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to list_path(@list), class: 'btn btn-primary' do %>
  <i class="fas fa-undo"></i> Return
<% end %>
